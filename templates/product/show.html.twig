{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - La boutique du 237{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-4">
            <img src="/assets/images/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col-md-8">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <span class="product-page-price">{{ (product.price / 100) | number_format(2, ',', '.') }} &euro;</span>
            <hr/>
            <p>
                {{ product.description }}
            </p>
            <a href="{{ path('add-to-cart', {'id': product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
        </div>
    </div>
{% endblock %}
